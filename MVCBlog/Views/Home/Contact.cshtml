@using MVCBlog.ViewModels
@model ContactMe

<section>
    <div class="container">
        <div class="row bg-opacity-10 bg-primary p-5">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h1 class="d-flex justify-content-center">Contact Me</h1>
                <p class="d-flex justify-content-center">I will be happy to reply to any inquires related to the blog or my work.</p>
                <form asp-action="Contact" id="emailForm">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" type="text" class="form-control" placeholder="Name" required data-validation-required-message="Please enter your name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Email Address</label>
                            <input type="email" class="form-control" placeholder="Email Address" asp-for="Email" required data-validation-required-message="Please enter your email address.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Phone Number</label>
                            <input type="tel" class="form-control" placeholder="Phone Number" asp-for="Phone" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group col-xs-12 floating-label-form-group controls">
                            <label>Subject</label>
                            <input class="form-control" placeholder="Subject" asp-for="Subject" required data-validation-required-message="Please enter your phone number.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Message</label>
                            <textarea id="summernote" class="form-control" asp-for="Message" required data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary w-100" id="sendMessageButton" onclick="return confirmEmail()">Send</button>
                </form>
            </div>
        </div>
    </div>

</section>

@section Scripts{
    <script>
        function confirmEmail() {

            Swal.fire({
                icon: 'success',
                text: 'Message sent!',
                position: 'bottom-end',
                timer: 2000,
                showConfirmButton: false,
                timerProgressBar: true,
                toast: true
            }).then(() => {
                    $('#emailForm').submit();
                    return true;
                })
            return false;
        }
    </script>
}